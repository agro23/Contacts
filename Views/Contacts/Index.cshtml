<h1>CONTACTS LIST</h1>

@if (@Model.Count == 0)
{
  <h3>No Contacts have been added yet!</h3>
}
else
{
  <ol>
    @foreach (var contact in Model)
    {
      <li><a href="/Contacts/@contact.GetID()">@contact.GetFirstName()&nbsp;@contact.GetLastName()</a></li>
    }
  </ol>
}



<form action="/Contacts/new" method="post">
<button type="submit">Create a Contact</button>
</form>

<form action="/Contacts/clear" method="post">
  <button type="submit" name="button" class="btn btn-danger">Clear Contacts</button>
</form>
