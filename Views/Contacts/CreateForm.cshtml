@{
  Layout = "_Layout";
}
<div class="container">
<h1>ADD A CONTACT</h1>
  <form action="/Contacts/create" method="post">
    <div class="form-group row">
      <label for="first-name" class="col-2 col-form-label">First Name</label>
      <div class="col-10">
        <input class="form-control" type="text" id="newFirst" name="first-name" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="last-name" class="col-2 col-form-label">Last Name</label>
      <div class="col-10">
        <input class="form-control" type="text" id="newLast" name="last-name">
      </div>
    </div>
    <div class="form-group row">
      <label for="company-name" class="col-2 col-form-label">Company</label>
      <div class="col-10">
        <input class="form-control" type="text" id="newCompany" name="company-name">
      </div>
    </div>
    <div class="form-group row">
      <label for="new-address1" class="col-2 col-form-label">Address 1</label>
      <div class="col-10">
        <input class="form-control" type="text" id="newAddress1" name="new-address1">
      </div>
    </div>
    <div class="form-group row">
      <label for="new-address2" class="col-2 col-form-label">Address 2</label>
      <div class="col-10">
        <input class="form-control" type="text" id="newAddress2" name="new-address2">
      </div>
    </div>
    <div class="form-group row">
      <label for="new-city" class="col-2 col-form-label">City</label>
      <div class="col-10">
        <input class="form-control" type="text" id="newCity" name="new-city">
      </div>
    </div>
    <div class="form-group row">
      <label for="new-stateOrProvince" class="col-2 col-form-label">State or Province</label>
      <div class="col-10">
        <input class="form-control" type="text" id="newStateOrProvince" name="new-stateOrProvince">
      </div>
    </div>
    <div class="form-group row">
      <label for="new-country" class="col-2 col-form-label">Country</label>
      <div class="col-10">
        <input class="form-control" type="text" id="newCountry" name="new-country">
      </div>
    </div>
    <div class="form-group row">
      <label for="new-postalcode" class="col-2 col-form-label">Postal or Zip Code</label>
      <div class="col-10">
        <input class="form-control" type="text" id="newPostalCode" name="new-postalcode">
      </div>
    </div>
    <div class="form-group row">
      <label for="new-phone" class="col-2 col-form-label">Phone Number</label>
      <div class="col-10">
        <input class="form-control" type="text" id="newPhone" name="new-phone">
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
